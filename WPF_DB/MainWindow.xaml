        xmlns:local="clr-namespace:WPF_DB"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Name="username" Margin=" 0 262 0 0" VerticalAlignment="Top" Width="120"/>
